CON { timing constants }

    _CLKFREQ = 200_000_000          ' System clock frequency

CON { hardware pin assignments }

    HDMI_BASE_PIN = 0               ' HDMI on P0-P7 (pin group 0) per README.md

OBJ

    gfx : "isp_psram_graphics"      ' HDMI graphics system

PUB main()

    debug("================================================================================")
    debug("HDMI/PSRAM Graphics Test")
    debug("================================================================================")
    debug(" ")
    debug("Starting HDMI on pin ", udec(HDMI_BASE_PIN), "...")
    debug(" ")

    ' Start graphics system - this will:
    ' - Initialize PSRAM
    ' - Initialize HDMI output
    ' - Draw test grid
    ' - Fill sample cells with colors
    gfx.start(HDMI_BASE_PIN)

    debug("HDMI graphics initialized successfully!")
    debug("Test pattern should be visible on HDMI display")
    debug(" ")
    debug("System running continuously...")
    debug(" ")

    ' Keep system running - HDMI display stays active
    repeat
        waitms(1000)

