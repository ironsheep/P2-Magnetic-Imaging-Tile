CON { timing constants }

    _CLKFREQ = 200_000_000          ' System clock frequency

CON { hardware pin assignments }

    HDMI_BASE_PIN = 0               ' HDMI on P0-P7 (pin group 0)

OBJ

    psram : "PSRAM_driver_RJA_Platform_1b"
    hdmi  : "isp_hdmi_640x480_24bpp"       ' Use NEW timings (proper VGA 640x480 @ 60Hz)

PUB main()

    debug("================================================================================")
    debug("Reference HDMI Driver Test")
    debug("================================================================================")
    debug(" ")
    debug("Starting PSRAM...")

    psram.start()

    debug("Starting HDMI on pin ", udec(HDMI_BASE_PIN), "...")
    hdmi.start(HDMI_BASE_PIN, psram.pointer(), 0)

    debug("HDMI reference driver initialized!")
    debug("Test pattern should be visible on HDMI display")
    debug(" ")
    debug("System running continuously...")
    debug(" ")

    ' Keep system running
    repeat
        waitms(1000)

